extends base.pug

block meta
  meta(name='quiz-id' content=quizId)
  meta(name='csrf-token' content=csrfToken)

block styles
  link(rel='stylesheet' type='text/css' href='/stylesheets/modal.css')
  link(rel='stylesheet' type='text/css' href='/stylesheets/form.css')
  link(rel='stylesheet' type='text/css' href='/stylesheets/description-list.css')
  link(rel='stylesheet' type='text/css' href='/stylesheets/quiz.css')

block scripts
  script(src='/scripts/quiz.js' defer type='module')

block content
  .spinner
  h2#header Question 1
  .form 
    p#intro Good luck!
    label#label(for='answer')
    input#answer(type='number' step='1' name='answer' required)
    dl.time-list
      dt Time
      dd#time 0:00.0
      dt Penalty
      dd#penalty 0s
  #buttons
    #prev.button Previous question
    #finish.button Finish quiz
    #next.button Next question
  #modal.modal.modal-disabled
    section.modal-section
      h3#modal-header Are you sure?
      div
        #confirm.button Yes
        #cancel.button No